    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Consumer",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/consumer.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Producer",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/producer.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}